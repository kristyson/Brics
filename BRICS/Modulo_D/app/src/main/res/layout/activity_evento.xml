<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Evento">

    <TextView
        android:id="@+id/textView"
        android:layout_width="476dp"
        android:layout_height="111dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Premium Staycation Package at Pan Pacific"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="773dp"
        android:layout_height="368dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/event" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="69dp"
        android:layout_height="82dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="@+id/imageView16"
        app:layout_constraintTop_toTopOf="@+id/imageView16"
        app:srcCompat="@drawable/back"
        app:tint="@color/white" />


    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="689dp"
        android:layout_height="641dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView16"
        app:srcCompat="@drawable/img" />

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="@+id/imageView29"
        app:layout_constraintTop_toTopOf="@+id/imageView29"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/button"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="96dp"
        android:text="Seguir"
        android:textSize="30sp"
        android:background="@drawable/button_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView29" />

</androidx.constraintlayout.widget.ConstraintLayout>